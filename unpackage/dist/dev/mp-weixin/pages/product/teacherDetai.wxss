.container .tea-info .bg {
  width: 100%;
  text-align: center;
  position: relative;
}
.container .tea-info .bg .tea-bg {
  width: 100%;
  height: 274rpx;
}
.container .tea-info .bg .head-icon {
  width: 180rpx;
  height: 180rpx;
  position: absolute;
  left: 50%;
  top: 150rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
}
.container .tea-info .bg .head-icon .image {
  max-width: 100%;
  max-height: 100%;
  border-radius: 50%;
}
.container .tea-info .bg .tea-name {
  margin-top: 60rpx;
}
.container .tea-info .bg .tea-desc {
  text-align: left;
  font-size: 28rpx;
  color: #787878;
  text-indent: 2em;
  margin-top: 20rpx;
  padding: 0 20rpx 0 20rpx;
  box-sizing: border-box;
}
.container .tea-info .bg .tea-desc .showbtn {
  color: blue;
  white-space: normal;
}
.container .tea-cource {
  margin-top: 20rpx;
}
.container .tea-cource .title {
  padding: 20rpx;
}
.container .tea-cource .cource-info {
  width: 100%;
  height: 180rpx;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
}
.container .tea-cource .cource-info .cource-pic {
  width: 200rpx;
  height: 120rpx;
  border-radius: 20rpx;
}
.container .tea-cource .cource-info .cource-pic .picture {
  max-width: 100%;
  max-height: 100%;
}
.container .tea-cource .cource-info .cource-text {
  margin-left: 25rpx;
}
.container .tea-cource .cource-info .cource-text .cource-code {
  margin-top: 30rpx;
  color: #888;
