.container .wrapper .input-section, .container .wrapper .btn-login, .container .wrapper .btn-try {
  height: 35px;
  line-height: 35px;
  -webkit-border-radius: 20px;
          border-radius: 20px;
  text-align: center;
  margin-bottom: 20px;
}
.container {
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: #fff;
}
.container .bg {
  width: 100%;
}
.container .wrapper {
  width: 75%;
  margin: 25px auto 0;
}
.container .wrapper .input-section {
  border: 1rpx solid #ccc;
}
.container .wrapper .btn-login {
  color: #fff;
  font-size: 14px;
  background: -webkit-gradient(linear, right top, left top, from(#3ec2ff), to(#258aff));
  background: -webkit-linear-gradient(right, #3ec2ff, #258aff);
  background: linear-gradient(right, #3ec2ff, #258aff);
}
.container .wrapper .btn-try {
  color: #fff;
  font-size: 14px;
  background: -webkit-gradient(linear, right top, left top, from(#ff800f), to(#ff9127));
  background: -webkit-linear-gradient(right, #ff800f, #ff9127);
  background: linear-gradient(right, #ff800f, #ff9127);
}
.container .wrapper .forget-section {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  font-size: 14px;
}
.container .wrapper .forget-section navigator:nth-child(n+2) {
  margin-left: 10px;
}

