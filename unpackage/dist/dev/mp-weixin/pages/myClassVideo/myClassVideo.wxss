.container {
  padding-top: 565rpx;
}
.container .course {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 999;
}
.container .course .video {
  width: 100%;
  height: 400rpx;
  position: relative;
}
.container .course .video image {
  width: 100%;
  height: 100%;
}
.container .course .video .btn-play {
  width: 80px;
  height: 80px;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.container .course .video video {
  width: 100%;
}
.container .course .videoEnd {
  width: 100%;
  height: 400rpx;
  background: #000;
  position: relative;
}
.container .course .videoEnd .content {
  width: 500rpx;
  height: 100rpx;
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.container .course .videoEnd .content .text {
  color: #fff;
}
.container .course .videoEnd .content .btns {
  width: 500rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.container .course .videoEnd .content .btns .btn {
  width: 240rpx;
  height: 50rpx;
  margin-top: 30rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 14px;
}
.container .course .info {
  height: 115rpx;
  background: #fff;
  padding: 20rpx 30rpx 30rpx 30rpx;
}
.container .course .info .title {
  height: 60rpx;
  font-weight: 600;
  line-height: 1.6;
  font-size: 24rpx;
}
.container .course .info .nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  font-size: 22rpx;
}
.container .course .info .nav .iconfont {
  font-size: 22rpx;
}
.container .course .info .nav .looked {
  width: 66rpx;
  position: relative;
}
.container .course .info .nav .looked .text {
  position: absolute;
  left: 0;
  bottom: 0;
}
.container .course .info .nav .collect-check {
  color: #ff6600;
}
.container .learn-box .catalog {
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  border-bottom: 1px solid #ccc;
  padding-left: 30rpx;
}
.container .learn-box .learn-list .cell {
  height: 60rpx;
  line-height: 60rpx;
  vertical-align: middle;
  font-size: 24rpx;
  color: #333;
  margin-top: 10rpx;
}
.container .learn-box .learn-list .cell .iconfont {
  margin-right: 10rpx;
  font-size: 24rpx;
}
.container .learn-box .learn-list .cell .my-icon-video {
  color: #41a5fd;
}
.container .learn-box .learn-list .cell .my-icon-xiazai {
  float: right;
  color: #41a5fd;
  font-size: 28rpx;
