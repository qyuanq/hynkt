page {
  background-color: #F6F7F8;
}
page .container .header {
  width: 100%;
  height: 360rpx;
  background: #41A5FD;
  text-align: center;
}
page .container .header .head-img {
  width: 183rpx;
  height: 183rpx;
  margin: 0 auto;
  border-radius: 50%;
  margin-top: 50rpx;
}
page .container .header .head-text {
  margin-top: 20rpx;
  color: #fff;
  font-size: 28rpx;
}
page .container .header .head-text .iconfont {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}
page .container .base-info {
  margin-top: 20rpx;
}
page .container .base-info .tit .van-cell__title {
  font-size: 34rpx;
}
page .container .base-info .van-radio {
  display: inline-block;
  vertical-align: middle;
}
page .container .base-info .van-radio:nth-child(n+1) {
  margin-left: 30rpx;
}
page .container .base-info .van-radio .van-radio__icon-wrap {
  display: inline-block;
}
page .container .base-info .van-radio .van-radio__label {
  display: inline-block;
}
page .container .base-info .overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  z-index: 99;
}
page .container .base-info .van-picker {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 560rpx;
  margin-top: 30rpx;
  z-index: 100;
}
page .container .base-info .btn {
  width: 50%;
  height: 35px;
  line-height: 35px;
  background-color: #43A3FD;
  color: #fff;
  border-radius: 20px;
  margin-top: 25px;
}

