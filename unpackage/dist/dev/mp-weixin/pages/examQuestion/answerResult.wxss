.container .result-box {
  height: 260rpx;
  text-align: center;
  padding-top: 50rpx;
  border-bottom: 10rpx solid #F6F7F8;
  box-sizing: border-box;
}
.container .result-box .result {
  width: 160rpx;
  margin: 0 auto 0;
  height: 160rpx;
  line-height: 160rpx;
  text-align: center;
  background: #41A5FD;
  border-radius: 50%;
  font-size: 48rpx;
  color: #fff;
  font-weight: bold;
}
.container .queAndAns {
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 30rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  border-top: 1px dashed #c0c0c0;
}
.container .queAndAns .test-title {
  width: 580rpx;
  display: inline-block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.container .border-none {
  border-top: none;
}
.container .btns {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 96rpx;
  padding-top: 18rpx;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
  border-top: 1px solid #c0c0c0;
}
.container .btns .btn {
  width: 260rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  color: #fff;
}
.container .btns .confirm {
  background-color: #41A5FD;
}
.container .btns .try-again {
  background-color: #FF6600;
}

