.question {
  margin-top: 10rpx;
  box-shadow: 2rpx 2rpx 10rpx #e3e2e2;
  width: 710rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  padding: 0 0 40rpx 10rpx;
}
.question .head {
  width: 660rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.question .head .user {
  padding-top: 40rpx;
}
.question .head .user .icon-head {
  width: 80rpx;
  height: 80rpx;
  float: left;
}
.question .head .user .icon-head image {
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.question .head .user .phone {
  line-height: 80rpx;
  margin-left: 15rpx;
  color: #888;
  font-size: 20rpx;
}
.question .head .btns {
  padding-top: 20rpx;
}
.question .head .btns .comment-btn, .question .head .btns .zan {
  display: inline-block;
}
.question .head .btns .comment-btn .count, .question .head .btns .zan .count {
  margin-left: 20rpx;
}
.question .head .btns .comment-btn {
  margin-left: 30rpx;
}
.question .head .btns .active {
  color: #ff6600;
}
.question .head .btns .my-icon-shanchu {
  position: absolute;
  right: 20rpx;
}
.question .center {
  margin-left: 95rpx;
  margin-right: 60rpx;
}
.question .center .content {
  width: 100%;
  height: auto;
}
.question .center .date {
  color: #ccc;
  font-size: 20rpx;
}
.question .center .img .pic {
  width: 100%;
}
.question .bottom {
  margin: 40rpx 180rpx 0 95rpx;
  font-size: 24rpx;
}
.question .bottom .bread {
  color: #41A5FD;
}

