.container_cart {
  width: 700rpx;
  height: 200rpx;
  background: #fff;
  border-radius: 20px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.container_cart movable-area {
  width: 600rpx;
}
.container_cart movable-area movable-view {
  width: 700rpx;
  height: 200rpx;
  z-index: 5;
  overflow: hidden;
  background: #fff;
}
.container_cart .cart {
  width: 600rpx;
  margin: 0 auto;
  height: 200rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
}
.container_cart .cart .picture {
  width: 200rpx;
}
.container_cart .cart .picture image {
  width: 100%;
}
.container_cart .cart .content {
  margin-left: 20rpx;
  width: 400rpx;
  height: 80rpx;
}
.container_cart .cart .content .title {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.container_cart .cart .priceAndNumber {
  margin-top: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.container_cart .cart .priceAndNumber .price {
  color: #ED6A0C;
  line-height: 30px;
}
.container_cart .delete {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 1;
  width: 140rpx;
  height: 200rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
  line-height: 200rpx;
  text-align: right;
  background: red;
  color: #fff;
}

